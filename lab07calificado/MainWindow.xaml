<Window x:Class="lab07calificado.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab07calificado"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!-- Contenedor principal -->
        <StackPanel>
            <!-- Filtro de búsqueda por nombre -->
            <TextBox Name="txtNombre" Width="200" Margin="10" 
                     VerticalContentAlignment="Center" HorizontalContentAlignment="Left" 
                     Text="Buscar por nombre"/>
            <Button Name="btnFiltrar" Content="Filtrar productos" Width="200" Margin="10" Click="btnFiltrar_Click"/>

            <!-- DataGrid para mostrar los productos -->
            <DataGrid Name="dataGridProductos" Margin="10" AutoGenerateColumns="True" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
